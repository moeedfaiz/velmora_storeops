# ---- UI (Streamlit) image ----
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    STREAMLIT_SERVER_HEADLESS=true

WORKDIR /app

COPY requirements-ui.txt /tmp/requirements-ui.txt
RUN pip install --upgrade pip && pip install -r /tmp/requirements-ui.txt

COPY . /app

EXPOSE 8501
CMD ["streamlit","run","app/ui_app.py","--server.address=0.0.0.0","--server.port=8501"]
